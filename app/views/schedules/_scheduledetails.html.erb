<% if schedules.nil? || schedules.empty? %>
  <p>Nenhum registro nesse dia.</p>
<% else %>
  <% schedules.each do |schedule| %>
    <div class="card text-cWhite mb-3">
      <span class="fw-bold text-cYellow"><%= schedule.date.strftime("%d/%m/%Y") %></span>
      <span><%= schedule.profile.name %></span>
      <span><%= schedule.gemba.name %></span>
    </div>
  <% end %>
<% end %>
