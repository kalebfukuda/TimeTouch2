<div>
  <span>Hello, <%= current_user.email %></span>
  <div class="mt-3">
    <div class="card">
      <span><%= Date.today %></span>
      <p>444-Hachioji</p>
      <p>444-Hachioji</p>
    </div>
  </div>
  <div class="mt-3">
    <div class="card">
      <%= simple_form_for registers_path do |f| %>
        <div class="p-3">
          <div class="btn-group d-flex justify-content-center gap-4 mb-3" role="group" data-toggle="buttons">
            <%= f.collection_radio_buttons :status, [["Hiru", "active"], ["Yoru", "inactive"]], :last, :first do |b| %>
              <%= b.label(class: "btn btn-cBlue") do %>
                <%= b.radio_button(class: "btn-check") %> <%= b.text %>
              <% end %>
            <% end %>
          </div>
          <%= f.input :date,  as: :string, input_html: { type: "date", class: "form-control rounded-4" }, label: false %>
          <%= f.input :gemba, input_html: { class: "form-control rounded-4" }, placeholder: "Gemba", label: false %>
          <%= f.input :extra_hour, input_html: { class: "form-control rounded-4" }, placeholder: "Extra Hour", label: false %>
          <%= f.input :extra_cost, input_html: { class: "form-control rounded-4" }, placeholder: "Extra Cost", label: false %>
          <%= f.hidden_field :confirmed, value: "false", data: { slideconfirm_target: "hidden" } %>
          <div data-controller="slideconfirm" class="slide-container">
            <div data-slideconfirm-target="track" class="slide-track">
              <div data-slideconfirm-target="handle" class="slide-handle">â‡¨</div>
              <span class="slide-text">Slide to confirm</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
